{
  "name": "piobuddev/sakila-lumen",
  "description": "Domain logic for sakila applications",
  "type": "project",
  "authors": [
    {
      "name": "Piotr Budny",
      "role": "Developer"
    }
  ],
  "minimum-stability": "dev",
  "repositories": [
    {
      "type": "path",
      "url": "/home/vagrant/sakila/sakila"
    },
    {
      "type": "path",
      "url": "/home/vagrant/Code/behat-webapi-extension"
    },
    {
      "type": "path",
      "url": "/home/vagrant/Code/repository-tester"
    }
  ],
  "require": {
    "php": "^7.0",
    "laravel/lumen-framework": "5.5.*",
    "vlucas/phpdotenv": "~2.2",
    "piobuddev/sakila": "*"
  },
  "autoload": {
    "psr-4": {
      "Sakila\\": "app/"
    }
  },
  "require-dev": {
    "piobuddev/behat-webapi-extension": "*",
    "phpstan/phpstan": "^0.8.5",
    "squizlabs/php_codesniffer": "*",
    "limedeck/phpunit-detailed-printer": "^3.1",
    "piobuddev/repository-tester": "*"
  },
  "autoload-dev": {
    "psr-4": {
      "Sakila\\Test\\": [
        "tests/Integration",
        "tests/Unit"
      ]
    }
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "phpstan": "vendor/bin/phpstan analyse -l 7 app tests",
    "phpcs": "vendor/bin/phpcs --standard=PSR2 --extensions=php --colors --severity=1 app tests",
    "phpcbf": "vendor/bin/phpcbf --standard=PSR2 --extensions=php --colors --severity=1 app tests",
    "test": [
      "@phpstan",
      "@phpcs",
      "behat --colors",
      "phpunit"
    ]
  },
  "prefer-stable": true,
  "optimize-autoloader": true
}
